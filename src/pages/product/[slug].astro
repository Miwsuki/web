import products from "../../products.json";
import "../../style.css";
import logo from "../../../public/logo.png";
import favicon from "/public/favicon.png"

export async function getStaticPaths() {
  return products.map((_, index) => ({
    params: { slug: `${index + 1}` }, // ðŸ†• Si no hay ID, se genera dinÃ¡micamente
  }));
}

const { slug } = Astro.params;
// const product = products.find((p) => p.id === Number(slug));
const product = products.find((_, index) => `${index + 1}` === slug);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href={favicon.src} type="image/x-icon">

    <title>Miwsuki</title>
  </head>

  <body>
    <div class="main">
      <div class="product-header">
        <a class="product-home-link" href="../../index.html">Inicio</a>
      </div>

      <div class="product">
        <div class="slider">
          <div class="slides">
            <!-- {{ for image of images }} -->
            {product?.images.map((img) => <img src={"../../../img/" + img} alt="" class="slide" />)}
          </div>
          <button class="prev" onclick="prevSlide()">&#10094</button>
          <button class="next" onclick="nextSlide()">&#10095</button>
        </div>

        <div class="product-info">
          <h3 class="product-title">{product?.title}</h3>
          {product?.description && <p class="product-description">{product.description}</p>}
          {
            product?.size && (
              <p class="product-size">
                <b>Altura:</b> {product.size}cm
