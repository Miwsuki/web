<script defer>
  /* â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€” IMAGE SLIDER â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€” */

  const slides = document.querySelectorAll(".slides img");
  let slideIndex = 0;

  document.addEventListener("DOMContentLoaded", initializeSlider);

  function initializeSlider() {
    if (slides.length === 1) {
      // @ts-ignore
      document.querySelector("button.prev").remove();
      // @ts-ignore
      document.querySelector("button.next").remove();
    }

    if (slides.length > 0) {
      slides[slideIndex].classList.add("displaySlide");
    }
  }

  function showSlide(index) {
    if (index >= slides.length) {
      slideIndex = 0;
    } else if (index < 0) {
      slideIndex = slides.length - 1;
    }

    slides.forEach((slide) => {
      slide.classList.remove("displaySlide");
    });
    slides[slideIndex].classList.add("displaySlide");
  }

  function prevSlide() {
    slideIndex--;
    showSlide(slideIndex);
  }

  function nextSlide() {
    slideIndex++;
    showSlide(slideIndex);
  }
</script>
